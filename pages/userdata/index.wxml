<!--pages/userdata/index.wxml-->
<view>
  <form bindsubmit="formSubmit">
    <i-panel title="答题人登记">
      <i-input value="{{ value1 }}" type="textarea" title="电话" placeholder="请输入手机号" maxlength="11" type="number" bind:change="handleChange1" />
      <i-input value="{{ value2 }}" type="textarea" title="姓名" placeholder="请输入答题人姓名" maxlength="500" bind:change="handleChange2" />
      <button class="i-btn i-btn-small i-btn-primary i-btn-circle" hover-class="i-btn-hover" formType="submit">提交</button>
    </i-panel>
  </form>
</view>
